{#
/**
 * @file
 * Theme override to display a view of unformatted rows.
 *
 * Available variables:
 * - title: The title of this group of rows. May be empty.
 * - rows: A list of the view's row items.
 *   - attributes: The row's HTML attributes.
 *   - content: The row's content.
 * - view: The vi_preprocess_views_view_unformatted()
 */
#}

{% for row in rows %}
  {%
    set row_classes = [
      default_row_class ? 'views-row',
    ]
  %}
  
  {% set name = row.content['#view'].style_plugin.render_tokens[ loop.index0 ]['{{ name }}']|striptags|trim|lower %}
  {% set name = name|replace({' ': '-', 'á': "a", 'é': "e", 'í': "i", 'ó': "o", 'ú': "u", 'ñ': "n"})  %}

    <style>
      .field--name-field-{{ name }}{
          display: none;
      }
    </style>
{% endfor %}